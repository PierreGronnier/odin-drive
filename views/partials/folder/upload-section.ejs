<div class="upload-section">
  <form
    action="/upload"
    method="POST"
    enctype="multipart/form-data"
    class="upload-form"
    onsubmit="return validateFileSize(this)"
  >
    <input type="hidden" name="folderId" value="<%= currentFolder.id %>" />

    <div class="file-input-wrapper">
      <input
        type="file"
        name="file"
        id="folderFileInput"
        class="file-input"
        required
        onchange="handleFileSelect(this)"
      />
      <label for="folderFileInput" class="file-input-label">
        <div class="upload-placeholder" id="folderUploadPlaceholder">
          <div class="upload-icon icon-wrapper">
            <img src="/icon/cloud.png" alt="Cloud upload Placeholder" />
          </div>
          <div class="upload-text">
            <h3>Drop files here to add to this folder</h3>
            <p>or click to browse</p>
          </div>
        </div>
        <div class="file-preview" id="folderFilePreview" style="display: none">
          <div class="preview-content">
            <div class="preview-icon icon-wrapper icon-xl">
              <img src="/icon/files.png" alt="File Preview Icon" />
            </div>
            <div class="preview-info">
              <h4 id="folderFileName"></h4>
              <p id="folderFileSize"></p>
            </div>
            <button
              type="button"
              class="remove-file"
              onclick="removeSelectedFile()"
            >
              Ã—
            </button>
          </div>
        </div>
      </label>
    </div>

    <div id="folderFileMessage" class="file-message"></div>
    <button type="submit" class="btn btn-primary">
      <div class="button-icon icon-wrapper icon-md">
        <img src="/icon/upload.png" alt="Upload" />
      </div>
      Upload to this folder
    </button>
  </form>
</div>
