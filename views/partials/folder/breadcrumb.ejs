<nav class="breadcrumb">
  <a href="/dashboard" class="breadcrumb-link">
    <i class="breadcrumb-icon">
      <img src="/icon/dashboard.png" alt="Dashboard Icon" class="breadcrumb-image-icon">
    </i> Dashboard
  </a>

  <% if (currentFolder && currentFolder.parent) { %>
  <span class="breadcrumb-separator">›</span>
  <a href="/folder/<%= currentFolder.parent.id %>" class="breadcrumb-link">
    <%= currentFolder.parent.name %>
  </a>
  <% } %> <% if (currentFolder) { %>
  <span class="breadcrumb-separator">›</span>
  <span class="breadcrumb-current">
    <i class="breadcrumb-folder-icon">
      <img src="/icon/folder.png" alt="Folder Icon" class="breadcrumb-image-icon">
    </i>
    <%= currentFolder.name %>
  </span>
  <% } %>
</nav>