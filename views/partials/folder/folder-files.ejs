<div class="files-section">
  <% if (files && files.length > 0) { %>
  <div class="files-list">
    <% files.forEach(file => { %>
    <div class="file-item">
      <div class="file-icon">
        <img
          src="<%= getFileIcon(file.mimetype) %>"
          alt="Icône de fichier"
          class="icon-md"
        />
      </div>
      <div class="file-details">
        <h3 class="file-name"><%= file.originalName %></h3>
        <div class="file-meta">
          <span class="file-size"><%= formatFileSize(file.size) %></span>
          <span class="file-date">
            Uploaded <%= new Date(file.createdAt).toLocaleDateString() %>
          </span>
        </div>
      </div>
      <div class="file-actions">
        <a
          href="/download/<%= file.id %>"
          class="file-action download"
          title="Download"
        >
          <i class="icon-sm">↓</i>
        </a>
        <form action="/delete/<%= file.id %>" method="POST" class="delete-form">
          <button
            type="submit"
            class="file-action delete"
            title="Delete"
            onclick="return confirm('Delete this file?')"
          >
            <i class="icon-sm">×</i>
          </button>
        </form>
      </div>
    </div>
    <% }); %>
  </div>
  <% } else { %>
  <div class="empty-state">
    <div class="empty-icon">
      <img src="/icon/files.png" alt="empty icon" class="icon-lg" />
    </div>
    <h3>No files in this folder</h3>
    <p>Upload files to see them here</p>
  </div>
  <% } %>
</div>
